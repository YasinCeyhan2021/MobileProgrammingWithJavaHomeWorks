<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewAd"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:text="Adınız : "
                    android:textAlignment="viewStart"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewSoyad"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Soyadınız : "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewDYili"
                    android:layout_width="153dp"
                    android:layout_height="45dp"
                    android:text="Doğum Yılınız : "
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/plainTextAd"
                    android:layout_width="wrap_content"
                    android:layout_height="42.5dp"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/plainTextSoyad"
                    android:layout_width="wrap_content"
                    android:layout_height="42.5dp"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/plainTextDYili"
                    android:layout_width="wrap_content"
                    android:layout_height="42.5dp"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonGonder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gonder"
            android:text="Gönder" />

        <TextView
            android:id="@+id/textViewSonuc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>